{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 --version >/dev/null 2>&1 && python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/on_prompt.py\" || python \"${CLAUDE_PLUGIN_ROOT}/scripts/on_prompt.py\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 --version >/dev/null 2>&1 && python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/on_stop.py\" || python \"${CLAUDE_PLUGIN_ROOT}/scripts/on_stop.py\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 --version >/dev/null 2>&1 && python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/post_compact.py\" || python \"${CLAUDE_PLUGIN_ROOT}/scripts/post_compact.py\""
          }
        ]
      }
    ],
